<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dialogs="clr-namespace:Diary.App.Dialogs"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:colorPicker="https://irihi.tech/semi"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Diary.App.Views.TagView">
    <Design.DataContext>
        <dialogs:EditableWorkTag />
    </Design.DataContext>
    <UserControl.Styles>
        <Style Selector="TextBlock, ToggleSwitch">
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>
    </UserControl.Styles>
    <Border Theme="{StaticResource CardBorder}" Padding="8 2" >
        <StackPanel Orientation="Horizontal" Spacing="8">
            <TextBlock Text="{Binding Id, StringFormat='#{0}: '}" />
            <TextBox Text="{Binding Name}"/>
            <ColorPicker ColorSpectrumShape="Box">
                <ColorPicker.Palette>
                    <colorPicker:SemiColorLightPalette />
                </ColorPicker.Palette>
            </ColorPicker>
            <ToggleSwitch IsChecked="{Binding Disabled}" OnContent="{x:Null}" OffContent="{x:Null}"
                          />
            <Button i:Attached.Icon="fa-trash-can" Theme="{StaticResource BorderlessButton}"
                    Width="28" Height="28" Padding="0" ToolTip.Tip="删除标签"
                    Command="{Binding DeleteCommand}"/>
        </StackPanel>
    </Border>
</UserControl>
