<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewModels="clr-namespace:Diary.App.ViewModels"
             xmlns:u="https://irihi.tech/ursa"
             xmlns:i="https://github.com/projektanker/icons.avalonia"
             xmlns:base="clr-namespace:Diary.Core.Data.Base;assembly=Diary.Core"
             xmlns:views="clr-namespace:Diary.App.Views"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:DataType="viewModels:WorkEditorViewModel"
             x:Class="Diary.App.Views.WorkEditorView" Padding="8 0 0 0">
    <Design.DataContext>
        <viewModels:WorkEditorViewModel />
    </Design.DataContext>

    <UserControl.Styles>
        <Style Selector="MenuItem">
            <Setter Property="Foreground" Value="{DynamicResource ButtonDefaultPrimaryForeground}" />
            <Style Selector="^:selected">
                <Setter Property="Foreground" Value="{DynamicResource ButtonDefaultPrimaryForeground}" />
            </Style>
        </Style>
    </UserControl.Styles>

    <DockPanel Name="EditPanel">
        <u:Divider DockPanel.Dock="Top" Content="一般信息" HorizontalContentAlignment="Left" />
        <Grid DockPanel.Dock="Top" ColumnDefinitions="Auto,Auto,Auto,Auto,*" RowDefinitions="Auto,Auto,Auto"
              ColumnSpacing="8" RowSpacing="8">
            <TextBlock Grid.Row="0" Grid.Column="0" Text="日期：" VerticalAlignment="Center" />
            <CalendarDatePicker Grid.Row="0" Grid.Column="1" Grid.ColumnSpan="2"
                                SelectedDate="{Binding Date, Converter={StaticResource DateConvert}}" />
            <SplitButton Grid.Row="0" Grid.Column="3" Content="使用今天"
                         Command="{Binding QuickDateCommand}" CommandParameter="0">
                <SplitButton.Flyout>
                    <MenuFlyout>
                        <MenuItem Header="使用昨天" Command="{Binding QuickDateCommand}" CommandParameter="-1" />
                        <MenuItem Header="使用明天" Command="{Binding QuickDateCommand}" CommandParameter="+1" />
                    </MenuFlyout>
                </SplitButton.Flyout>
            </SplitButton>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="标题：" VerticalAlignment="Center" />
            <TextBox Grid.Row="1" Grid.Column="1" Grid.ColumnSpan="4" Text="{Binding Comment}" Classes="ClearButton" />
            <TextBlock Grid.Row="2" Grid.Column="0" Text="耗时：" VerticalAlignment="Center" />
            <u:NumericDoubleUpDown Grid.Row="2" Grid.Column="1" Width="100"
                                   Value="{Binding Time}" InnerRightContent="小时"
                                   ShowButtonSpinner="False" Maximum="24" Minimum="0"/>
            <TextBlock Grid.Row="2" Grid.Column="2" Text="优先级：" VerticalAlignment="Center" HorizontalAlignment="Right"/>
            <u:EnumSelector Grid.Row="2" Grid.Column="3" Value="{Binding Priority}"
                            EnumType="{x:Type base:WorkPriorities}" />
        </Grid>
        <u:Divider DockPanel.Dock="Top" Content="标签列表" HorizontalContentAlignment="Left" />
        <!-- 标签列表 -->
        <ItemsControl ItemsSource="{Binding WorkTags}" DockPanel.Dock="Top">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel ItemSpacing="8" Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate DataType="{x:Type base:WorkTag}">
                    <Border Background="{Binding Color, Converter={StaticResource IntColor}}"
                            Theme="{DynamicResource CardBorder}" Margin="2" Padding="8 4">
                        <Border.Styles>
                            <Style Selector="TextBlock">
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </Border.Styles>
                        <StackPanel Orientation="Horizontal" Spacing="4">
                            <TextBlock Text="{Binding Id, StringFormat='#{0}'}"
                                       Foreground="{Binding Color, Converter={StaticResource SimpleInverse}}"/>
                            <TextBlock Text="{Binding Level, Converter={StaticResource TagLevelFormater}}"
                                       Foreground="{Binding Color, Converter={StaticResource SimpleInverse}}"/>
                            <TextBlock Text="{Binding Name}"
                                       Foreground="{Binding Color, Converter={StaticResource SimpleInverse}}"/>
                            <Button Theme="{DynamicResource BorderlessButton}"
                                    Command="{Binding #EditPanel.((viewModels:WorkEditorViewModel)DataContext).DelTagCommand}"
                                    CommandParameter="{Binding}">
                                <i:Icon Value="mdi-tag-remove-outline" Classes="Danger"/>
                            </Button>
                        </StackPanel>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <Button DockPanel.Dock="Top" HorizontalAlignment="Left">
            <StackPanel Orientation="Horizontal" Spacing="4">
                <i:Icon Value="mdi-tag-plus-outline" />
                <TextBlock Text="添加标签" />
            </StackPanel>
            <Button.Flyout>
                <MenuFlyout ItemsSource="{Binding AvailableTags}">
                    <MenuFlyout.ItemTemplate>
                        <DataTemplate DataType="{x:Type base:WorkTag}">
                            <MenuItem Command="{Binding #EditPanel.((viewModels:WorkEditorViewModel)DataContext).AddTagCommand}"
                                      CommandParameter="{Binding}">
                                <MenuItem.Header>
                                    <StackPanel Orientation="Horizontal" Spacing="4">
                                        <TextBlock Text="{Binding Id, StringFormat='#{0}'}"/>
                                        <TextBlock Text="{Binding Level, Converter={StaticResource TagLevelFormater}}"/>
                                        <TextBlock Text="{Binding Name}"/>
                                    </StackPanel>
                                </MenuItem.Header>
                            </MenuItem>
                        </DataTemplate>
                    </MenuFlyout.ItemTemplate>
                </MenuFlyout>
            </Button.Flyout>
        </Button>
        <u:Divider DockPanel.Dock="Top" Content="RedMine信息" HorizontalContentAlignment="Left" />
        <!-- redmine预留 -->
        <!-- plm预留 -->
        <u:Divider DockPanel.Dock="Top" Content="备注（仅本地存储）" HorizontalContentAlignment="Left" />
        <TextBox Text="{Binding Note}" AcceptsReturn="True" VerticalAlignment="Stretch"
                 VerticalContentAlignment="Top" Padding="4" Classes="Bordered" />
    </DockPanel>
</UserControl>