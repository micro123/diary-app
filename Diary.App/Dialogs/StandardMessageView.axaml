<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:dialogs="clr-namespace:Diary.App.Dialogs"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="Diary.App.Dialogs.StandardMessageView"
             x:DataType="dialogs:StandardMessageViewModel"
             MinWidth="450"
             MinHeight="220">
    <Design.DataContext>
        <dialogs:StandardMessageViewModel />
    </Design.DataContext>
    <TextBox Text="{Binding Body}" IsReadOnly="True"
             HorizontalAlignment="Stretch" VerticalAlignment="Stretch" HorizontalContentAlignment="Left"
             VerticalContentAlignment="Top" Classes="TextArea Bordered"/>
</UserControl>